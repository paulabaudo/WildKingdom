<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_tortoise"
        android:src="@drawable/tortoise"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/image_margin_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_view_habitat_text"
        android:id="@+id/text_view_habitat"
        android:layout_below="@+id/image_tortoise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/label_margin_top"
        android:layout_marginLeft="@dimen/label_margin_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/text_view_habitat_description"
        android:layout_below="@+id/text_view_habitat"
        android:layout_alignLeft="@+id/text_view_habitat"
        android:layout_alignStart="@+id/text_view_habitat"
        android:layout_marginTop="@dimen/text_margin_top"
        android:text="@string/text_view_tortoise_habitat"
        android:layout_marginRight="@dimen/text_margin_right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_view_description_text"
        android:id="@+id/text_view_description"
        android:layout_below="@+id/text_view_habitat_description"
        android:layout_alignLeft="@+id/text_view_habitat_description"
        android:layout_alignStart="@+id/text_view_habitat_description"
        android:layout_marginTop="@dimen/label_margin_top" />
</RelativeLayout>